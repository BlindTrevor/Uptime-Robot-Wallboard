# Wallboard Configuration
# Copy this file to config.env and customize as needed

# UptimeRobot API Token (REQUIRED)
# Get your API token from: https://uptimerobot.com → Settings → API Settings
UPTIMEROBOT_API_TOKEN=your-uptimerobot-api-token-here

# Custom wallboard title (optional)
# If not set, defaults to "UptimeRobot – Current Status"
WALLBOARD_TITLE=UptimeRobot – Current Status

# Custom logo path (optional)
# Path relative to the application root or absolute URL
# Leave empty to disable logo display
# Examples:
#   WALLBOARD_LOGO=logo.png
#   WALLBOARD_LOGO=images/company-logo.svg
#   WALLBOARD_LOGO=https://example.com/logo.png
WALLBOARD_LOGO=

# Display Options
# Show only monitors with problems by default (true/false)
# Default: false (show all monitors)
SHOW_PROBLEMS_ONLY=false

# Show paused monitors on the wallboard (true/false)
# Default: false (paused monitors are hidden)
# When set to true, paused monitors will be displayed and marked as "PAUSED"
SHOW_PAUSED_DEVICES=false

# Refresh Intervals (in seconds)
# How often to refresh the data from API (minimum: 10 seconds)
# Default: 20
REFRESH_RATE=20

# How often to check for config file changes (in seconds)
# Default: 5
CONFIG_CHECK_RATE=5

# Response Time Graph Cache Duration (in seconds)
# How long to cache response time data before fetching fresh data
# This reduces API calls and rate limit usage
# Default: 300 (5 minutes)
# Minimum: 60 (1 minute)
RESPONSE_TIME_CACHE_DURATION=300

# Query String Override Control
# Allow URL query parameters to override configuration settings
# When set to true, users can modify settings via URL (e.g., ?showProblemsOnly=true&refreshRate=30)
# When set to false, all query string parameters are ignored for security
# Default: true
ALLOW_QUERY_OVERRIDE=true

# Theme Configuration
# Set the default theme for the wallboard
# Options: dark, light, auto (follows system preference)
# Default: dark
# Can be overridden via query string: ?theme=light
# User selection is stored in a cookie and takes precedence
THEME=dark

# Auto Fullscreen Mode
# Automatically enter fullscreen mode when the wallboard loads
# Options: true, false
# Default: false
# Can be overridden via query string: ?autoFullscreen=true
# Useful for kiosk displays and public monitors
AUTO_FULLSCREEN=false

# Show Tags
# Display tags on monitor cards
# Options: true, false
# Default: true
# Can be overridden via query string: ?showTags=false
# Can be toggled via UI button
SHOW_TAGS=true

# Tag Color Configuration (optional)
# Configure acceptable colors for tags in JSON format
# Supports two configurations:
#   1. "acceptable" - array of colors to use for tags (hex codes or CSS color names)
#   2. "tags" - object mapping specific tag names to colors
# If not specified, colors are generated automatically from tag names
# Example:
# TAG_COLORS={"acceptable":["#FF0000","#00FF00","blue","orange"],"tags":{"critical":"red","warning":"yellow","info":"#abf7b1"}}
TAG_COLORS=

# Rate Limit Configuration
# Warning threshold for API rate limit quota (in requests remaining)
# When remaining quota drops below this value, a warning will be displayed
# and logged to uptime_errors.log
# Default: 3 (suitable for Free plan: 10 requests/minute)
# For Pro plan (up to 5000 requests/minute), you may want to increase this
RATE_LIMIT_WARNING_THRESHOLD=3

# Event Viewer Configuration
# Default visibility state for the event viewer sidebar
# Options: visible, hidden, disabled
# - visible: Sidebar is open by default
# - hidden: Sidebar is closed by default but can be toggled
# - disabled: Sidebar is completely disabled and cannot be toggled
# Default: hidden
# Can be overridden via query string: ?eventViewer=visible (unless disabled)
EVENT_VIEWER_DEFAULT=hidden

# Event logging mode
# Options: circular, forever
# - circular: Keeps only the most recent N events (configured below)
# - forever: Never deletes events, log grows indefinitely
# Default: circular
EVENT_LOGGING_MODE=circular

# Maximum number of events to keep in circular mode
# Only applies when EVENT_LOGGING_MODE=circular
# Default: 1000
EVENT_LOGGING_MAX_EVENTS=1000

# Number of events to display per page in the event viewer
# Options: any number from 10 to 'all'
# - 10, 20, 50, 100, etc.: Show specific number of events per page
# - all: Show all events on one page (no pagination)
# Default: 50
EVENT_VIEWER_ITEMS_PER_PAGE=50

# Recent event highlighting time window (in minutes)
# Events that occurred within this time window are displayed with a prominent color
# to improve visibility of recent activity
# Default: 60 (1 hour)
# Examples: 30 (30 minutes), 120 (2 hours), 1440 (24 hours)
RECENT_EVENT_WINDOW_MINUTES=60

# Event type filter pills
# Enable toggleable filter pills for event types (Down, Up, Paused, Error) in event history
# Options: true, false
# Default: true
# When enabled, users can click pills to toggle visibility of each event type
EVENT_TYPE_FILTER_ENABLED=true

# Default state for each event type filter (true = visible, false = hidden by default)
# Users can still toggle these in the UI, these just set the initial state
# Default: true (all event types visible by default)
EVENT_TYPE_FILTER_DEFAULT_DOWN=true
EVENT_TYPE_FILTER_DEFAULT_UP=true
EVENT_TYPE_FILTER_DEFAULT_PAUSED=true
EVENT_TYPE_FILTER_DEFAULT_ERROR=true
EVENT_TYPE_FILTER_DEFAULT_ACTIONS=true
